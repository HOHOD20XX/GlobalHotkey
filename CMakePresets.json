{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "example-use-hook",
            "displayName": "Example Use Hook",
            "cacheVariables": {
                "GBHK_EXAMPLE_USE_HOOK": "ON"
            },
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "disable-register",
            "displayName": "Disable Register",
            "cacheVariables": {
                "GBHK_DISABLE_REGISTER": "ON",
                "GBHK_EXAMPLE_USE_HOOK": "ON"
            },
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "disable-hook",
            "displayName": "Disable Hook",
            "cacheVariables": {
                "GBHK_DISABLE_HOOK": "ON"
            },
            "binaryDir": "${sourceDir}/build/${presetName}"
        }
    ]
}
